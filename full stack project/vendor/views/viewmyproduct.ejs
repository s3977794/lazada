<!DOCTYPE html>
<html>
  <head>
    <title>My Products</title>
  </head>
  <body>
    <h1>My Products</h1>
    <% if (products.length > 0) { %>
      <table>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Image</th>
        </tr>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
            <td><img src="<%= product.image %>"></td>
          </tr>
        <% }); %>
      </table>
    <% } else { %>
      <p>No products found.</p>
    <% } %>
  </body>
</html>
