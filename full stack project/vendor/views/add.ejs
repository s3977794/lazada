<!DOCTYPE html>
<html>
  <head>
    <title>Add New Product</title>
    <link rel="stylesheet" href="/css/add.css">

  </head>
  <body>
    <h1>Add New Product</h1>
    <form method="POST" action="/add" enctype="multipart/form-data">
      <label>Product Name:</label>
      <input type="text" name="productName" minlength="10" maxlength="20" required><br><br>
      <label>Product Price:</label>
      <input type="number" name="productPrice" min="0" required><br><br>
      <label>Product Brand:</label>
      <select name="productBrand" required>
        <option value="">Select brand...</option>
        <option value="Apple">Apple</option>
        <option value="Samsung">Samsung</option>
        <option value="Bandai">Bandai</option>
        <option value="No Brand">No Brand</option>
        <option value="Vsmart">Vsmart</option>
      </select><br><br>

      <label>Product Location:</label>
      <select name="productLocation" required>
        <option value="">Select location...</option>
        <option value="Ho Chi Minh">Ho Chi Minh</option>
        <option value="Nha Trang">Nha Trang</option>
        <option value="Ha Noi">Ha Noi</option>
        <option value="Da Nang">Da Nang</option>
        <option value="Phan Thiet">Phan Thiet</option>
        <option value="Vung Tau">Vung Tau</option>
      </select><br><br>

      <label>Product CFO:</label>
      <select name="productCFO" required>
        <option value="">Select CFO...</option>
        <option value="USA">USA</option>
        <option value="Korea">Korea</option>
        <option value="Japan">Japan</option>
        <option value="China">China</option>
        <option value="Vietnam">Vietnam</option>
        <option value="India">India</option>
      </select><br><br>

      <label>Product Description:</label>
      <textarea name="productDescription" maxlength="500" required></textarea><br><br>
      
      <label for="imageOne">Image 1:</label>
      <input type="file" id="imageOne" name="imageOne" accept="image/*" required>
    </div>
    <div>
      <label for="imageTwo">Image 2:</label>
      <input type="file" id="imageTwo" name="imageTwo" accept="image/*" required>
    </div>
    <div>
      <label for="imageThree">Image 3:</label>
      <input type="file" id="imageThree" name="imageThree" accept="image/*" required>
    </div>
    <div>
      <label for="imageFour">Image 4:</label>
      <input type="file" id="imageFour" name="imageFour" accept="image/*" required>
    </div>
    <button type="submit">Add Product</button>
    </form>
  </body>
</html>
