<!DOCTYPE html>
<html>
  <head>
    <title>Add New Product</title>
    <link rel="stylesheet" href="/css/add.css">

  </head>
  <body>
    <h1>Add New Product</h1>
    <form method="POST" action="/add" enctype="multipart/form-data">
      <label>Product Name:</label>
      <input id="productName" type="text" name="productName" minlength="10" maxlength="20" required><br><br>
      <label>Product Price:</label>
      <input type="number" name="productPrice" min="0" required><br><br>
      <label>Product Brand:</label>
      <input name="productBrand" required>
        
  <br><br>

      <label>Product Location:</label>
      <input name="productLocation" required>
  <br><br>

      <label>Product CFO:</label>
      <input name="productCFO" required>
      <br><br>

      <label>Product Description:</label>
      <textarea name="productDescription" maxlength="500" required></textarea><br><br>

      <label>Image:</label>
      <input id="uploader" type="file" name="image" multiple required><br><br>
      <p id="error"></p>
      <input id="submit" type="submit" value="Add" disabled>
    </form>
    <script src="/js/add.js"></script>
  </body>
</html>
